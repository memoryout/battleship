package {	    import app.ApplicationFacade;        import flash.display.MovieClip;    import flash.display.StageAlign;    import flash.display.StageScaleMode;    import flash.events.Event;    import flash.events.StageOrientationEvent;
    /**     * PureMVC Gallery Demo main.fla Document Class     */        public class Main extends MovieClip 	{                      public function Main()        {			addEventListener( Event.ADDED_TO_STAGE, start );        }                     /**         * This is called by preloader once entire swf is loaded         */        public function start(e:Event=null) : void         {			stage.align = StageAlign.TOP_LEFT;			stage.scaleMode = StageScaleMode.NO_SCALE;						removeEventListener( Event.ADDED_TO_STAGE, start );			            // init PureMVC Facade            var facade:ApplicationFacade = ApplicationFacade.getInstance();            facade.startup( this.stage );        }    }}